{
    "version": 2,
    "builds": [
        {
            "src": "apps/client/package.json",
            "use": "@vercel/static-build"
        },
        {
            "src": "apps/server/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "apps/server/src/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "apps/client/dist/$1"
        }
    ],
    "outputDirectory": "apps/client/dist"
}