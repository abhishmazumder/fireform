{
    "version": 2,
    "builds": [
        {
            "src": "apps/client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "framework": "vite",
                "distDir": "apps/client/dist"
            }
        },
        {
            "src": "apps/server/api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/client/dist/index.html"
        }
    ]
}