{
    "version": 2,
    "builds": [
        {
            "src": "apps/client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "apps/client/build"
            }
        },
        {
            "src": "apps/server/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/apps/server/src/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/client/$1"
        }
    ]
}