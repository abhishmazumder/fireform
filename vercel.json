{
    "version": 2,
    "builds": [
        {
            "src": "server/src/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/dist/**",
            "use": "@vercel/static"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/dist/$1"
        }
    ]
}